generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  DEV
}

enum LogLevel {
  INFO
  WARN
  ERROR
  DEBUG
}

enum HealthStatus {
  HEALTHY
  DEGRADED
  DOWN
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  name         String
  role         Role     @default(DEV)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  refreshTokens RefreshToken[]
  systemLogs    SystemLog[]
  auditLogs     AuditLog[]

  @@map("users")
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
}

model SystemLog {
  id            String   @id @default(uuid())
  level         LogLevel
  service       String
  message       String
  requestId     String?
  correlationId String?
  userId        String?
  endpoint      String?
  statusCode    Int?
  metadata      Json?
  createdAt     DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([level])
  @@index([service])
  @@index([requestId])
  @@index([correlationId])
  @@index([createdAt])
  @@map("system_logs")
}

model HealthCheck {
  id             String       @id @default(uuid())
  serviceName    String
  status         HealthStatus
  responseTimeMs Int
  details        String?
  checkedAt      DateTime     @default(now())

  @@index([serviceName])
  @@index([checkedAt])
  @@map("health_checks")
}

model AuditLog {
  id          String   @id @default(uuid())
  userId      String?
  action      String
  resource    String
  resourceId  String?
  before      Json?
  after       Json?
  environment String
  createdAt   DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([resource])
  @@index([createdAt])
  @@map("audit_logs")
}